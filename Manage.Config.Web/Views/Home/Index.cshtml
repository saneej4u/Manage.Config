@model ResponseWrapper<ServerModel>;
@{
    ViewData["Title"] = "Configuration Manager";
}


@if (Model.Data != null)
{
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="text-left">
                    <h1 class="display-6">Default Server Configurations</h1>
                    <br />
                    <h5>Config file can be found at @Model.Data.FilePath</h5>
                    <br />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <partial name="_ShowDefaultServerPartial" model="@Model.Data.DefaultServer"></partial>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <div class="text-left">
                    <h1 class="display-6">Server Specific Configurations</h1>
                    <br />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <partial name="_ShowSpecificServersPartial" model="@Model.Data.SpecificServers"></partial>
            </div>
        </div>
    </div>
}
